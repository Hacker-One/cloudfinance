<assembly xmlns="http://maven.apache.org/plugins/maven-assemblyplugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchemainstance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assemblyplugin/assembly/1.1.2
                                http://maven.apache.org/xsd/assembly1.1.2.xsd">
    <id>root</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>io.advantageous.boon:boon-json</exclude>
                <exclude>io.advantageous.boon:boon-reflekt</exclude>
                <exclude>io.advantageous.metrik:metrik</exclude>
                <exclude>io.advantageous.qbit:qbit-consul-client</exclude>
                <exclude>io.advantageous.qbit:qbit-admin</exclude>
                <exclude>io.advantageous.qbit:qbit-core</exclude>
                <exclude>io.advantageous.qbit:qbit-service-discovery</exclude>
                <exclude>io.advantageous.qbit:qbit-vertx</exclude>
                <exclude>com.fasterxml.jackson.core:jackson-annotations</exclude>
                <exclude>com.fasterxml.jackson.core:jackson-core</exclude>
                <exclude>com.fasterxml.jackson.core:jackson-databind</exclude>
                <exclude>org.apache.kafka:kafka-clients</exclude>
                <exclude>log4j:log4j</exclude>
                <exclude>org.slf4j:slf4j-api</exclude>
                <exclude>org.slf4j:slf4j-log4j12</exclude>
                <exclude>ch.qos.logback:logback-classic</exclude>
                <exclude>ch.qos.logback:logback-core</exclude>
                <exclude>net.jpountz.lz4:lz4</exclude>
                <exclude>io.netty:netty-buffer</exclude>
                <exclude>io.netty:netty-codec</exclude>
                <exclude>io.netty:netty-codec-http</exclude>
                <exclude>io.netty:netty-common</exclude>
                <exclude>io.netty:netty-handler</exclude>
                <exclude>io.netty:netty-transport</exclude>
                <exclude>org.reactivestreams:reactive-streams</exclude>
                <exclude>org.xerial.snappy:snappy-java</exclude>
                <exclude>io.vertx:vertx-auth-common</exclude>
                <exclude>io.vertx:vertx-core</exclude>
                <exclude>io.vertx:vertx-web</exclude>
                <exclude>com.qloudfin:qloudbus-annoation</exclude>
                <exclude>com.qloudfin.qloudbus:qloudbus-kafka-admin</exclude>
                <exclude>com.qloudfin.qloudbus:qloudbus-kafka-core</exclude>
                <exclude>com.qloudfin.qloudbus:qloudbus-kafka-event</exclude>
                <exclude>com.qloudfin.qloudbus:qloudbus-kafka-queue</exclude>
                <exclude>com.qloudfin:qloudbus-admin</exclude>
                <exclude>com.qloudfin:qloudbus-core</exclude>
                <exclude>com.qloudfin:qloudbus-service-discovery</exclude>
                <exclude>com.qloudfin:qloudbus-vertx</exclude>
                <exclude>com.qloudfin.qloudbus:qloudbus-sdk-server</exclude>
                <exclude>com.qloudfin.qloudbus:qloudbus-vertx-core</exclude>
                <exclude>com.qloudfin.qloudbus:qloudbus-vertx-event</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/server</directory>
            <outputDirectory>/</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
</assembly>
